"/* THis template includes a form with an email address and password field. The
form should POST to /register. */"

<form class="form-inline" action="/register" method="POST">
  <div class="form-group mb-2">
    <input
      class="form-control"
      type="email"
      name="email"
      placeholder="Enter your email"
      style="width: 300px; margin: 1em"
    />
    <input
      class="form-control"
      type="password"
      name="password"
      placeholder="Enter your password"
      style="width: 300px; margin: 1em"
    />

    <button type="submit" class="btn btn-primary">Register</button>
  </div>
</form>
